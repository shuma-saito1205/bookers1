

<% if flash[:notice1] %>
  <p id="notice">
    <%= flash[:notice1] %>
  </p>
<% end %>

<h1>Books</h1>
  <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
  <% @books.each do |book| %>
    <tr>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
        <%= link_to 'Show', book_path(book.id) %>
        <%= link_to 'Edit', edit_path(book.id) %>
        <%= link_to 'Destroy',destroy_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %>
    </tr>
  <% end %>
</table>
  
  <h2>New book</h2>
 <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>