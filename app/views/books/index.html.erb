<h1>Books</h1>
<body>
  <table class="Books">
    <thead>
      <tr>
        <th class="header1">Title</th>
        <th class="header2">Body</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @books.each do |book| %>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
        <% end %>
      </tr
    </tbody>
  </table>

  

  <h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
