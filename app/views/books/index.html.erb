<% if flash[:notice1] %>
  <p id="notice">
    <%= flash[:notice1] %>
  </p>
<% end %>

<h1>Books</h1>
<body>
  <table class="Books">
    <thead>
      <tr>
        <th class="header1">Title</th>
        <th class="header2">Body</th>
      </tr>
    </thead>
  </table>
      <tr>
        <% @books.each do |book| %>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>

        <%= link_to 'Show', book_path(book.id) %>
        <%= link_to 'Edit', edit_path(book.id) %>
        <%= link_to 'Destroy',destroy_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %>
        <% end %>
      </tr>
</body>
  
  <h2>New book</h2>
 <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
 <% end %>
</body>